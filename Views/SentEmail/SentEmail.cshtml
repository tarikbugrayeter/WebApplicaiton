@model WebApplicationProject.Models.SentEmail
@{
    ViewData["Title"] = "Sent Email";
}

<body style="background-color: #212529;">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header">
                        <h3 class="text-center font-weight-light my-4">Sent Email</h3>
                    </div>
                    <div class="card-body">
                        <form asp-controller="SentEmail" asp-action="SentEmail" method="get">
                            <div class="mb-3">
                                <label for="startId" class="form-label">Start Id:</label>
                                <input type="number" id="startId" name="startId" class="form-control form-control-lg" />
                            </div>
                            <div class="mb-3">
                                <label for="endId" class="form-label">End Id:</label>
                                <input type="number" id="endId" name="endId" class="form-control form-control-lg" />
                            </div>
                            <div class="mb-3">
                                <label for="attackType" class="form-label">Attack Type:</label>
                                <select id="attackType" name="attackType" class="form-select form-select-lg">
                                    <option value="Netflix">Netflix</option>
                                    <option value="Spotify">Spotify</option>
                                    <option value="Facebook">Facebook</option>
                                    <!-- Diğer attack türleri buraya eklenebilir -->
                                </select>
                            </div>
                            <div class="mb-3">
                                <label asp-for="SentDate" class="form-label"></label>
                                <input asp-for="SentDate" class="form-control form-control-lg" />
                                <span asp-validation-for="SentDate" class="text-danger"></span>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">Gönder</button>
                            </div>
                        </form>
                        <form asp-controller="SentEmail" asp-action="ProcessEmailFile" method="get">
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">Mailleri al</button>
                            </div>
                         </form>                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
